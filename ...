    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Навигация между страницами
            const navLinks = document.querySelectorAll('.nav-link');
            const pages = document.querySelectorAll('.page');
            
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Убираем активный класс со всех ссылок и страниц
                    navLinks.forEach(l => l.classList.remove('active'));
                    pages.forEach(page => page.classList.remove('active'));
                    
                    // Добавляем активный класс текущей ссылке
                    this.classList.add('active');
                    
                    // Показываем выбранную страницу
                    const pageId = this.getAttribute('data-page');
                    document.getElementById(pageId).classList.add('active');
                });
            });
            
            // Инициализация галерей для каждой страницы
            const galleries = [
                { id: 'home', inputId: 'file-input-home', triggerId: 'upload-trigger-home', galleryId: 'photo-gallery-home', emptyId: 'empty-message-home' },
                { id: 'training', inputId: 'file-input-training', triggerId: 'upload-trigger-training', galleryId: 'photo-gallery-training', emptyId: 'empty-message-training' },
                { id: 'matches', inputId: 'file-input-matches', triggerId: 'upload-trigger-matches', galleryId: 'photo-gallery-matches', emptyId: 'empty-message-matches' },
                { id: 'team', inputId: 'file-input-team', triggerId: 'upload-trigger-team', galleryId: 'photo-gallery-team', emptyId: 'empty-message-team' }
            ];
            
            galleries.forEach(gallery => {
                initGallery(gallery);
            });
            
            function initGallery(galleryConfig) {
                const fileInput = document.getElementById(galleryConfig.inputId);
                const uploadTrigger = document.getElementById(galleryConfig.triggerId);
                const photoGallery = document.getElementById(galleryConfig.galleryId);
                const emptyMessage = document.getElementById(galleryConfig.emptyId);

Саня, [04.11.2025 12:28]
// Загрузка сохраненных фотографий из localStorage при загрузке страницы
                loadSavedPhotos(galleryConfig.id, photoGallery, emptyMessage);
                
                // Обработчик клика на кнопку загрузки
                uploadTrigger.addEventListener('click', function() {
                    fileInput.click();
                });
                
                // Обработчик выбора файлов
                fileInput.addEventListener('change', function(e) {
                    const files = e.target.files;
                    if (files.length > 0) {
                        // Скрываем сообщение о пустой галерее
                        emptyMessage.style.display = 'none';
                        
                        // Обрабатываем каждый выбранный файл
                        for (let i = 0; i < files.length; i++) {
                            const file = files[i];
                            if (file.type.startsWith('image/')) {
                                addPhotoToGallery(file, galleryConfig.id, photoGallery, emptyMessage);
                            }
                        }
                        
                        // Сбрасываем значение input, чтобы можно было загрузить те же файлы снова
                        fileInput.value = '';
                    }
                });
            }
            
            // Функция добавления фото в галерею
            function addPhotoToGallery(file, galleryId, photoGallery, emptyMessage) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    // Создаем элемент галереи
                    const galleryItem = document.createElement('div');
                    galleryItem.className = 'gallery-item';
                    
                    // Создаем изображение
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = 'Волейбольное фото';
                    
                    // Создаем кнопку удаления
                    const deleteBtn = document.createElement('button');
                    deleteBtn.className = 'delete-btn';
                    deleteBtn.innerHTML = '×';
                    deleteBtn.addEventListener('click', function() {
                        galleryItem.remove();
                        removePhotoFromStorage(galleryId, e.target.result);
                        checkIfGalleryEmpty(photoGallery, emptyMessage);
                    });
                    
                    // Добавляем элементы в галерею
                    galleryItem.appendChild(img);
                    galleryItem.appendChild(deleteBtn);
                    photoGallery.appendChild(galleryItem);
                    
                    // Сохраняем фото в localStorage
                    savePhotoToStorage(galleryId, e.target.result);
                };
                
                reader.readAsDataURL(file);
            }
            
            // Функция сохранения фото в localStorage
            function savePhotoToStorage(galleryId, photoData) {
                let savedPhotos = JSON.parse(localStorage.getItem(volleyballPhotos_${galleryId})) || [];
                savedPhotos.push(photoData);
                localStorage.setItem(volleyballPhotos_${galleryId}, JSON.stringify(savedPhotos));
            }
            
            // Функция удаления фото из localStorage
            function removePhotoFromStorage(galleryId, photoData) {
                let savedPhotos = JSON.parse(localStorage.getItem(volleyballPhotos_${galleryId})) || [];
                const index = savedPhotos.indexOf(photoData);
                if (index > -1) {
                    savedPhotos.splice(index, 1);

Саня, [04.11.2025 12:28]
localStorage.setItem(volleyballPhotos_${galleryId}, JSON.stringify(savedPhotos));
                }
            }
            
            // Функция загрузки сохраненных фотографий
            function loadSavedPhotos(galleryId, photoGallery, emptyMessage) {
                const savedPhotos = JSON.parse(localStorage.getItem(volleyballPhotos_${galleryId})) || [];
                
                if (savedPhotos.length > 0) {
                    emptyMessage.style.display = 'none';
                    
                    savedPhotos.forEach(photoData => {
                        const galleryItem = document.createElement('div');
                        galleryItem.className = 'gallery-item';
                        
                        const img = document.createElement('img');
                        img.src = photoData;
                        img.alt = 'Волейбольное фото';
                        
                        const deleteBtn = document.createElement('button');
                        deleteBtn.className = 'delete-btn';
                        deleteBtn.innerHTML = '×';
                        deleteBtn.addEventListener('click', function() {
                            galleryItem.remove();
                            removePhotoFromStorage(galleryId, photoData);
                            checkIfGalleryEmpty(photoGallery, emptyMessage);
                        });
                        
                        galleryItem.appendChild(img);
                        galleryItem.appendChild(deleteBtn);
                        photoGallery.appendChild(galleryItem);
                    });
                }
            }
            
            // Функция проверки, пуста ли галерея
            function checkIfGalleryEmpty(photoGallery, emptyMessage) {
                if (photoGallery.children.length === 1) { // только сообщение о пустой галерее
                    emptyMessage.style.display = 'block';
                }
            }
        });
    </script>
